<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cooperation Hull</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CooperationHullMainSite.styles.css" asp-append-version="true" />

    <!-- Temp fix until we have the right font files format sorted out-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">

</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light border-bottom">
            <div class="container-fluid">

                <div class="navbar-brand ">
                    
                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">
                       <div class="d-inline-flex"> 
                            <img class="nav-bar-logo" src="~/assets/img/cooperationhulllogo.png" />
                            <h1> Cooperation Hull</h1>
                        </div>
                    </a>

                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-flex">

                    <ul class="navbar-nav flex-grow-1 flex-wrap justify-content-xxl-end  justify-content-xl-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark heading-sm" asp-area="" asp-controller="Home" asp-action="WhoWeAre">Who We Are</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark heading-sm" asp-area="" asp-controller="Home" asp-action="TheBigIdea">The Big Idea</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark heading-sm" asp-area="" asp-controller="Home" asp-action="AroundTheWorld">Around The World</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark heading-sm" asp-area="" asp-controller="Home" asp-action="FAQs">FAQ's</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark heading-sm" asp-area="" asp-controller="Home" asp-action="Donate">Donate</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark heading-sm" asp-area="" asp-controller="Home" asp-action="HelpToAttend">Help To Attend</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="main-content">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="row">
            &copy; 2024 - Cooperation Hull - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
